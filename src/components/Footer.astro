---
import SocialSection from "../components/SocialSection.astro";
import GitHubIcon from "../../icons/GitHub.astro";
import LinkedInIcon from "../../icons/LinkedIn.astro";
import GmailIcon from "../../icons/Gmail.astro";
import DownloadIcon from "../../icons/DownloadIcon.astro";
---

<footer
  id="contact"
  class="z-10 flex justify-center items-center my-6 py-2 w-fit px-6 mx-auto"
>
  <div class="p-4 flex items-center">
    <ul class="mt-3 text-sm font-medium text-white sm:mt-0">
      <nav class="flex gap-x-4">
        <SocialSection href="https://github.com/Marquez-David">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialSection>
        <SocialSection href="https://www.linkedin.com/in/davidmarquezminguez/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialSection>
        <SocialSection href="mailto:davidmarquezminguez@gmail.com">
          <GmailIcon class="size-4 md:size-6" />
          davidmarquezminguez@gmail.com
        </SocialSection>
        <a
          href="/resume/EN/MarquezDavid-CV.pdf"
          class="bg-gray-800 border border-gray-600 rounded-full flex justify-center items-center gap-x-2 py-2 px-8 hover:scale-105 transition"
          download
        >
          <DownloadIcon class="size-4 md:size-6" />
          CV
        </a>
      </nav>
    </ul>
  </div>
</footer>
