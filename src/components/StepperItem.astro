---
import EducationIcon from "../../icons/EducationIcon.astro";
import WorkIcon from "../../icons/WorkIcon.astro";
import ProjectIcon from "../../icons/ProjectIcon.astro";
import Modal from "../components/Modal.jsx";

const { key, type, title, description, date } = Astro.props;
---

<li
  class="flex items-center mb-8"
  style=`${key % 2 === 0 ? "" : "flex-direction: row-reverse;"}`
>
  <span
    class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -start-3 ring-8 ring-white"
  >
    {type === "education" ? <EducationIcon /> : <WorkIcon />}
  </span>
  <div
    class=`rounded-lg p-4 bg-gray-800 ${key % 2 === 0 ? "ml-8" : "mr-8"} border-t-2 border-t-white`
  >
    <Modal client:load title={title} date={date} description={description} />
  </div>
</li>
